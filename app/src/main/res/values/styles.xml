<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@drawable/wood</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <item name="android:background">#3a3e40</item>
    </style>

    <!-- Fall Theme -->

    <style name="AppTheme.Fall" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="backgroundColor">@drawable/fall_background</item>
        <item name="colorPrimary">@color/Fall_colorPrimary</item>
        <item name="colorPrimaryDark">@color/Fall_colorPrimaryDark</item>
        <item name="colorAccent">@color/Fall_colorAccent</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <!-- Winter Theme -->

    <style name="AppTheme.Winter" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="backgroundColor">@drawable/winter_background2</item>
        <item name="colorPrimary">@color/Winter_colorPrimary</item>
        <item name="colorPrimaryDark">@color/Winter_colorPrimaryDark</item>
        <item name="colorAccent">@color/Winter_colorAccent</item>
        <item name="android:textColor">#030303</item>
    </style>

    <!-- Spring Theme -->

    <style name="AppTheme.Spring" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="backgroundColor">@drawable/spring_background2</item>
        <item name="colorPrimary">@color/Spring_colorPrimary</item>
        <item name="colorPrimaryDark">@color/Spring_colorPrimaryDark</item>
        <item name="colorAccent">@color/Spring_colorAccent</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <!-- Summer Theme -->

    <style name="AppTheme.Summer" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="backgroundColor">@drawable/summer_background2</item>
        <item name="colorPrimary">@color/Summer_colorPrimary</item>
        <item name="colorPrimaryDark">@color/Summer_colorPrimaryDark</item>
        <item name="colorAccent">@color/Summer_colorAccent</item>
        <item name="android:textColor">#030303</item>
    </style>
</resources>
